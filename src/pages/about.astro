---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const pageTitle = "About Me"
const identity = {
	name: "Pravin",
	country: "Bharat",
	occupation: "Developer",
	hobbies: ["Bingewatching", "Coding", "Travelling"],
	skills: ["Web Development", "React.JS", "Programming Languages", "Arduino"]
}
const happy = true
const finished = true
const goal = 3
const skillColor = "navy"
const fontWeight = "bold"
const textCase = "uppercase"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
				color: purple;
				font-size: 4rem;
			}

			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
				text-transform: var(--textCase);
			}
		</style>
	</head>
	<body>
        <Header />
		<h1>About Me</h1>
        <h2>Here are a few facts about me!</h2>
		<ul>
			<li>My name is {identity.name}.</li>
			<li>I live in {identity.country}.</li>
			<li>I am a {identity.occupation}.</li>
			<li>My hobbies are {identity.hobbies[0]}, {identity.hobbies[1]}, and {identity.hobbies[2]}</li>
			<li>
				My skills include:
				<ul>
					{identity.skills.map((skill) => <li class="skill">{skill}</li>)}
				</ul>
			</li>
		</ul>
		{happy && <p>I am happy to be learning astro</p>}
		{finished && <p>I have finished this tutorial</p>}
		{goal === 3 ? <p>My goal is to finish this in 3 days</p> : <p>My goal is not to finish this in 3 days</p>}
		<Footer />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
